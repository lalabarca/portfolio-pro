<body class="d-flex align-items-center bg-auth">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 col-md-6 offset-xl-2 offset-md-1 order-md-2 mb-5 mb-md-0">

        <!-- Image -->
        <div class="text-center sign-in-logo">
          <%= image_tag "lhdesign_logo.svg", width:"200px" %>
        </div>

      </div>
      <div class="col-12 col-md-5 col-xl-4 order-md-1 my-5">

        <!-- Heading -->
        <h1 class="display-4 text-center mb-3">
          Se connecter
        </h1>

        <!-- Form -->
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <!-- Email address -->
          <div class="form-group">

            <!-- Input -->
            <%= f.input :email,
              required: false,
              autofocus: true, label_html: {class: "form-label" },
              input_html: { class: "form-control", autocomplete: "email", placeholder: "toto@gmail.com" } %>

          </div>

          <!-- Password -->
          <div class="form-group">

            <!-- Input -->
            <%= f.input :password, label: "Mot de passe",
            required: false, label_html: { class: "form-label" },
            input_html: { class: "form-control", autocomplete: "current-password", placeholder: "••••••••"  } %>

          </div>

          <!-- Remember -->
          <div class="form-group">

            <!-- Input -->
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <!-- Submit -->
          <%= f.button :submit, "Se connecter", class: "btn btn-normal w-100 mb-3" %>

          <!-- Link -->
          <div class="text-center">
            <small class="text-muted text-center">
              <!-- Help text -->
                <%= render "devise/shared/custom_links" %>
            </small>
          </div>

        <% end %>

      </div>
    </div> <!-- / .row -->
  </div><!-- / .container -->
</body>
